document
{
    header
    {
        width: 100% - 40;
        height: 100;
        contentAlignY: 50%;
        anchorY: 0;
        alignY: 20;
        
        logo
        {
            width: 120;
            height: 80;
            alignX: 70;
            background: @rgba { red: 255; green: 0; blue: 0 };
        }
        
        navigation
        {
            width: 100% - 150;
            height: 80;
            alignX: 100% - 10;
            anchorX: 100%;
            contentAlignY: 50%;
            
            *{
                width: 100;
                height: 40;
            }
            
            home { alignX: 20%; background: @rgba { red: 255; green: 0; blue: 0; alpha: 50 } }
            about { alignX: 40%; background: @rgba { red: 0; green: 255; blue: 0; alpha: 50 } }
            features { alignX: 60%; background: @rgba { red: 0; green: 0; blue: 255; alpha: 50 } }
            contact { alignX: 80%; background: @rgba { red: 0; green: 0; blue: 0; alpha: 50 } }
        }
    }
    
}