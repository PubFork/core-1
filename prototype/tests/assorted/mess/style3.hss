parent
{
    contentAlignY: 50%;
    
	child
	{
		width: 50%;
		height: 50%;
		contentAlignY: 50%;
		
		subchild
		{
			width: 100% - 10;
			height: 100% - 10;
		}
		
		subchild + subchild
		{
			width: 90%;
			height: 50%;
		}
	}
	
	child2
	{
		width: 10% + 20;
		height: 10% + 20;
	}
	
	child3
	{
	    height: 10;
	}
}