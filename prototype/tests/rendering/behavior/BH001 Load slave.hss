slave
{
    width: 600;
    height: 100%;
	background: #C;
	
	hello
	{
		width: 350;
		height: 50%;
		alignX: 100% - 15;
		alignY: 15;
		anchorX: 100%;
		anchorY: 0;
		
		background: @rgb {
			red: 255;
			green: 250;
			blue: 150;
			alpha: 50%;
		};
		font: @font {
			size: 50;
			face: "Helvetica";
		}
		
		behavior: @mouseUp
        {
            action: @request
            {
                src: "BH001 Load.xml";
            }
        }
	}
}