#import "bh001-common-styles.hss";

master
{
    background: bgGrad;

    #new top
    {
        height: 50% - 40;
        contentAlignX, contentAlignY: middle;

        #move @parent changeLocation
        {
            isA: button;
            width: 250;
            height: 100;
            on: @click {
                action: @request{ src: "bh001-load-slave.xml" }
            };
        }
        flow: no;
    }

    #new highlight
    {
        height: 1;
        background: #F;
        alignY: 50% - 30;
        flow: no;
    }

    #new shadow
    {
        height: 1;
        background: #BE;
        alignY: 50% - 30;
        flow: no;
    }

    #new shadow
    {
        height: 10;
        background: @linearGradient {
            startColor: #0002;
            endColor: #0000;
            endY: 100%;
        };
        alignY: 50% - 30;
        flow: no;
    }

    #new bottom
    {
        width: 100% - 100;
        height: 50% - 50;
        border: @{ 1 #BE };
        alignX: 50%;
        alignY: 73%;
        contentAlignX, contentAlignY: 50%;
        background: #F;
        shape: @{3};
        flow: no;


        #move @parent loadInto
        {
            isA: button;
            width: 300;
            height: 80;
            on: @click {
                action: @request{
                    src: "bh001-load-slave.xml";
                    target: sel(@parent);
                };
            };
        }
    }
}
