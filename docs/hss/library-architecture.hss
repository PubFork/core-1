@font baseFont
{
    face: "Myriad Pro";
    color: #9;
    size: 14;

    & bigFont
    {
        size: 23;
    }

    & fontGreen { color: #6A6; }
    & fontBlue { color: #66A; }
    & fontRed { color: #A66; }
}

@container box
{
    background: #E;
    border: @{ 1; #FFF6 }, @{ 1; #C };
    shape: @{ 5 };
    font: bigFont;
    textAlign: center;
    contentAlignY: middle;

    & boxGreen
    {
        background: #AEA;
        border: @{ 1; #FFF6 }, @{ 1; #8C8 };
        font: fontGreen;
    }

    & boxBlue
    {
        background: #AAE;
        border: @{ 1; #FFF6 }, @{ 1; #99D };
        font: fontBlue;
    }

    & boxRed
    {
        background: #EAA;
        border: @{ 1; #FFF6 }, @{ 1; #D99 };
        font: fontRed;
    }
}

& sectionWrapper
{
    width: 200;
    alignX: left;
    anchorY: 100%;
    alignY: 100% - 10;
    height: 100% - 50;
}

& boxLabel
{
    flow: no;
    alignX: 100% - 10;
    anchorX: 100%;
    textAlign: center;
    font: bigFont;
}

& hollowBox
{
    border: @{ 2; #D };
    shape: @{ 5 };
    font: bigFont;
    textAlign: center;
    contentAlignY: 18;
    background: #00000005;
    width: 100% - 20;
    height: 100% - 20;
    alignY: middle;
    contentAlignX: even;
}

& arrow
{
    height: ref(width);

    #new square
    {
        background: #C;
    }

    #new triangle
    {
        background: #C;
        flow: no;
    }

    & arrowDown
    {
        square
        {
            width: 50%;
            height: 100% - ref(height of triangle) / 2;
            alignX: center;
            alignY: top;
        }

        triangle
        {
            width: 100%;
            height: ref(width) / 1.2;
            shape: @polygon {
                sides: 3;
                angle: 90;
            };
            alignY: bottom;
        }
    }



    & arrowRight
    {

        square
        {
            width: 100% - ref(width of triangle) / 2;
            height: 50%;
            alignX: left;
            alignY: middle;
        }

        triangle
        {
            width: ref(height) / 1.2;
            height: 100%;
            shape: @polygon {
                sides: 3;
                angle: 0;
            };
            alignX: right;
        }
    }
}

*
