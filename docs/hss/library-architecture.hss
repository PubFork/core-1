                    }
                }

                #new renderingWrapper
                {
                    isA: sectionWrapper;

                    #new rendering
                    {
                        isA: hollowBox;
                        height: 100%;
                        contentAlignY: 18;

                        #new label
                        {
                            isA: boxLabel;
                            content: "Rendering";
                        }

                        #new wrapper
                        {
                            height: 100% - 50;
                            alignY: 100% - 10;
                            anchorY: 100%;

                            #new displayObject
                            {
                                isA: boxBlue;
                                width: 100% - 20;
                                height: 50% - 10;
                                alignX: center;
                                alignY: top;
