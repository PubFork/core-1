                                isA: boxGreen;
                                width: 100% - 20;
                                height: 25% - 10;
                                alignX: center;
                                alignY: bottom;

                                #new label
                                {
                                    isA: boxLabel;
                                    font: fontGreen;
                                    content: "Rule tree";
                                }
                            }
